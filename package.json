{
  "name": "blog",
  "version": "1.0.0",
  "description": "A blog to share stuff I find interesting or helpful and experiment with web technologies.",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx simple-git-hooks && npx patch-package",
    "hugo:dev": "hugo serve",
    "dev": "npm run hugo:dev",
    "cy:open": "cypress run",
    "cy:run": "cypress run",
    "test": "start-server-and-test dev 1313 cy:run",
    "generate-posts-images": "node ./scripts/generate-posts-images.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phelipetls/blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phelipetls/blog/issues"
  },
  "homepage": "https://github.com/phelipetls/blog#readme",
  "dependencies": {
    "@floating-ui/dom": "^0.2.0",
    "@testing-library/cypress": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "autoprefixer": "^10.4.8",
    "cypress": "^10.6.0",
    "eslint": "^8.21.0",
    "eslint-plugin-cypress": "^2.12.1",
    "lint-staged": "^12.5.0",
    "lite-youtube-embed": "^0.2.0",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "pdfjs-dist": "^2.15.349",
    "pdfobject": "^2.2.8",
    "postcss": "^8.4.16",
    "postcss-cli": "^8.3.1",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^14.1.0",
    "postcss-scrollbar": "^0.5.1",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "0.0.13",
    "puppeteer": "^17.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.34.2",
    "simple-git-hooks": "^2.8.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "prettier-plugin-tailwindcss": "^0.1.13"
  }
}
