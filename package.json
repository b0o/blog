{
  "name": "blog",
  "version": "1.0.0",
  "description": "A blog to share stuff I find interesting or helpful and experiment with web technologies.",
  "main": "index.js",
  "scripts": {
    "generate-gravatar-blurhash": "node scripts/generate-gravatar-blurhash.js",
    "postinstall": "simple-git-hooks",
    "hugo:dev": "hugo serve",
    "tailwind:dev": "tailwindcss -i ./assets/css/main.css -o ./assets/css/tailwind.dev.css --watch",
    "dev": "run-p hugo:dev tailwind:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phelipetls/blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phelipetls/blog/issues"
  },
  "homepage": "https://github.com/phelipetls/blog#readme",
  "dependencies": {
    "@floating-ui/dom": "^0.2.0",
    "autoprefixer": "^10.4.2",
    "blurhash": "^1.1.4",
    "canvas": "^2.9.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.10.0",
    "lint-staged": "^12.3.4",
    "lodash.throttle": "^4.1.1",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "pdfobject": "^2.2.7",
    "postcss": "^8.4.7",
    "postcss-cli": "^8.3.1",
    "postcss-plugin-context": "^2.0.0",
    "rss-parser": "^3.12.0",
    "sharp": "^0.29.3",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.23"
  },
  "simple-git-hooks": {
    "pre-push": "npm run generate-gravatar-blurhash",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
