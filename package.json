{
  "name": "blog",
  "version": "1.0.0",
  "description": "A blog to share stuff I find interesting or helpful and experiment with web technologies.",
  "main": "index.js",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "hugo:dev": "hugo serve",
    "dev": "npm run hugo:dev",
    "cy:open": "cypress run",
    "cy:run": "cypress run",
    "test": "cross-env HUGO_ENV=production start-server-and-test dev 1313 cy:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phelipetls/blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phelipetls/blog/issues"
  },
  "homepage": "https://github.com/phelipetls/blog#readme",
  "dependencies": {
    "@floating-ui/dom": "^0.2.0",
    "@testing-library/cypress": "^8.0.2",
    "autoprefixer": "^10.4.2",
    "canvas": "^2.9.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "cypress": "^9.5.4",
    "eslint": "^8.10.0",
    "eslint-plugin-cypress": "^2.12.1",
    "lint-staged": "^12.3.4",
    "lite-youtube-embed": "^0.2.0",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^2.12.313",
    "pdfobject": "^2.2.7",
    "postcss": "^8.4.7",
    "postcss-cli": "^8.3.1",
    "postcss-functions": "^4.0.2",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-go-template": "0.0.13",
    "rss-parser": "^3.12.0",
    "sharp": "^0.30.5",
    "simple-git-hooks": "^2.7.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.23"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run test"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  }
}
