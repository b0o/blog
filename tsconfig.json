{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    },
    "types": ["astro/client"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["src/components/devicons"]
}
