{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["assets/*"]
    }
  },
  "include": [
    "assets/js/**/*",
    "scripts/*"
  ],
  "exclude": [
    "assets/js/templates"
  ]
}
