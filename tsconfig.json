{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["assets/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "assets/js/templates"
  ]
}
