---
import { Image } from 'astro:assets'

type Props = {
  src: string
  caption: string
  alt: string
  width: number
  height: number
}

const { src, caption, alt, width, height } = Astro.props
---

<figure class='my-8'>
  <Image src={src} alt={alt} width={width} height={height} />

  {caption && <figcaption class='mt-1 font-bold'>{caption}</figcaption>}
</figure>
