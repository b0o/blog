---
import { twMerge } from 'tailwind-merge'
import { ChevronDown } from 'lucide-react'

const hasStartIcon = Astro.slots.has('start-icon')
---

<div
  class="relative py-1 bg-surface card flex justify-between flex-row items-center"
>
  {
    hasStartIcon && (
      <span class="pointer-events-none absolute left-2 top-1/2 -translate-y-1/2 text-sm">
        <slot name="start-icon" />
      </span>
    )
  }

  <select
    class:list={twMerge([
      'h-full w-full bg-surface appearance-none text-center',
      'pr-8',
      hasStartIcon && 'px-10',
    ])}
    {...Astro.props}
  >
    <slot />
  </select>

  <span
    class="pointer-events-none absolute right-2 top-1/2 -translate-y-1/2 text-sm"
  >
    <ChevronDown slot="end-icon" />
  </span>
</div>
