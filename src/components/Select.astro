---
import { twMerge } from 'tailwind-merge'
import { ChevronDown } from 'lucide-react'
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'select'> & {
  variant?: 'default' | 'ghost'
}

const { variant = 'default', ...rest } = Astro.props

const hasStartIcon = Astro.slots.has('start-icon')
---

<div
  class:list={[
    'relative rounded flex justify-between flex-row items-center',
    variant === 'default'
      ? 'bg-surface shadow-sm shadow-shadow'
      : 'bg-background',
  ]}
>
  {
    hasStartIcon && (
      <span class="pointer-events-none absolute left-2 top-1/2 -translate-y-1/2 text-sm">
        <slot name="start-icon" />
      </span>
    )
  }

  <select
    class:list={twMerge([
      'py-1 h-full w-full rounded bg-inherit appearance-none text-center pr-9',
      hasStartIcon && 'pl-9',
    ])}
    {...rest}
  >
    <slot />
  </select>

  <span
    class="pointer-events-none absolute right-2 top-1/2 -translate-y-1/2 text-sm"
  >
    <ChevronDown slot="end-icon" />
  </span>
</div>
