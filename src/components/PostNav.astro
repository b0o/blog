---
import { ArrowLeft, ArrowRight } from 'lucide-react'
import { useTranslate, getLanguageFromUrl, localizeUrl } from '@utils/i18n'
import type { CollectionEntry } from 'astro:content'

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = {
  prevBlogPost?: CollectionEntry<'posts'>
  nextBlogPost?: CollectionEntry<'posts'>
}

const t = useTranslate(Astro)
const language = getLanguageFromUrl(Astro.url.pathname)

const { prevBlogPost, nextBlogPost } = Astro.props
---

<nav class="flex items-stretch sm:gap-4" aria-label={t('PostsNavigation')}>
  {
    prevBlogPost ? (
      <a
        class="sm:card flex flex-none basis-1/2 flex-col gap-2 border-0 px-horizontal-padding py-4 transition-colors duration-300 hover:bg-hover"
        href={localizeUrl('/posts/' + prevBlogPost.slug, language)}
      >
        <span class="text-primary">
          <ArrowLeft />
        </span>

        {prevBlogPost.data.title}
      </a>
    ) : (
      <div class="flex-1" />
    )
  }

  <div class="border-l border-divider sm:hidden"></div>

  {
    nextBlogPost && (
      <a
        class="sm:card flex flex-none basis-1/2 flex-col-reverse items-end justify-end gap-2 border-0 px-horizontal-padding py-4 text-right transition-colors duration-300 hover:bg-hover"
        href={localizeUrl('/posts/' + nextBlogPost.slug, language)}
      >
        {nextBlogPost.data.title}

        <span class="text-primary">
          <ArrowRight />
        </span>
      </a>
    )
  }
</nav>
