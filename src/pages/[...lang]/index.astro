---
import { useTranslate } from '@utils/i18n/useTranslate'
import Gravatar from '@components/Gravatar.astro'
import Site from '@layouts/Site.astro'
import { Content as EnglishHomepage } from '../../content/index.md'
import { Content as PortugueseHomepage } from '../../content/index.pt.md'

export async function getStaticPaths() {
  return [
    {
      params: { lang: undefined },
      props: { Content: EnglishHomepage },
    },
    {
      params: { lang: 'pt' },
      props: { Content: PortugueseHomepage },
    },
  ]
}

const t = useTranslate(Astro)

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = {
  Content: typeof EnglishHomepage | typeof PortugueseHomepage
}

const { Content } = Astro.props
---

<Site title={t('About')}>
  <main class="grid flex-1 grid-cols-layout">
    <div class="flex flex-col items-center justify-center gap-8 sm:flex-row">
      <Gravatar />

      <article>
        <header>
          <h1 class="mb-4 hidden sm:block">{t('About')}</h1>
        </header>

        <div class="max-w-prose">
          <Content />
        </div>
      </article>
    </div>
  </main>
</Site>
